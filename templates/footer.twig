{% include 'partial/subscription-banner.twig' %}
<footer id="site-footer" class="bg-primary-900 px-14 pt-32 pb-12 text-white lg:pb-8 lg:pt-16 sm:px-8">
   <div class="mx-auto max-w-5xl border-b border-primary-700 pb-16">
      <div class="grid grid-cols-footer items-start gap-x-20 lg:grid-cols-footer-mob lg:gap-x-8 md:grid-cols-2 md:gap-10 sm:grid-cols-1">
         <div class="flex flex-col items-start">
            <h3 class="mb-6 text-4xl font-bold tracking-tight">
               Get in touch with us today to find out more.
            </h3>
            <p class="font-normal text-neutral-200">
               App4 will you get started with your own unique ordering solution
               that your customers will love.
            </p>
         </div>
         {% include 'menus/footer-menu.twig' with {'items': master.get_items} %}
      </div>
   </div>
   <div class="mx-auto flex max-w-5xl items-center justify-between pt-12 lg:pt-8 sm:flex-col-reverse sm:items-start">
      <div class="flex">
         <a href="" class="sm:hidden">
            <img src="{{ logo }}" alt="App4 Developments Logo" class="mr-4 max-h-8" />
         </a>
         <div class="mt-1 text-sm font-normal tracking-normal">
            <span class="mr-4 inline-block sm:hidden">|</span>&copy; Copyright {{"now"|date('Y')}}. All rights reserved.
         </div>
      </div>
      {% if options.social_media %}
      <div class="flex items-center space-x-3 sm:mb-4">
         {% for social in options.social_media %}
            <a href="{{social.social_media_link.url}}" target="{{social.social_media_link.target}}" class="flex h-8 w-8 items-center justify-center rounded-full bg-secondary-700 p-1">
               <img src="{{Image(social.social_media_icon).src}}" alt="{{social.social_media_icon.alt}}" />
            </a>
         {% endfor %}
      </div>
      {% endif %}
   </div>
</footer>


{% if items %}
	<ul class="flex items-center justify-start space-x-1">
		{% for item in items %}
			<li class="{{ item.classes | join(' ') }} {% if item.children %} has-dropdown group flex h-30 items-center {% endif %}">
				<a class="inline-block rounded border border-primary-900 py-2 px-4 font-medium text-neutral-100 transition-colors duration-300 ease-in-out hover:border-primary-700" target="{{ item.target }}" href="{{ item.link }}">
					{{ item.title }}
				</a>
				{% if item.children %}
					<div class="invisible absolute top-30 left-0 right-0 z-10 mx-auto w-full border-t border-primary-700 bg-primary-900 opacity-0 group-hover:visible group-hover:opacity-100">
						<div class="mx-auto flex max-w-5xl items-start space-x-4 py-10 px-8">
							{% for child in item.children %}
								<div class="flex flex-1 flex-col justify-center py-2 text-white">
									<h6 class="mb-5 font-bold">{{ child.title }}</h6>
									{% if child.children %}
										<nav class="flex flex-col items-start space-y-3">
											{% for third in child.children %}
												<a class="font-normal text-white opacity-50 transition-opacity hover:opacity-100" target="{{ third.target }}" href="{{ third.link }}">
													{{third.title}}
												</a>
											{% endfor %}
										</nav>
									{% endif %}
								</div>
							{% endfor %}
							<div class="rounded-md bg-white p-6 lg:bottom-8 lg:-left-8 sm:hidden">
								<h4 class="mb-1 text-3xl font-bold tracking-tighter">
									Let's Compare
								</h4>
								<h6 class="block border-b border-gray-200 pb-6 text-base font-bold uppercase text-neutral-400">
									Total Savings
								</h6>
								<div class="mt-6 w-56">
									<div class="mb-3">
										<h6 class="mb-1 text-sm font-bold">App4</h6>
										<div class="relative h-2 w-full bg-neutral-200">
											<span class="absolute left-0 top-0 block h-full w-[93%] bg-secondary-900"></span>
										</div>
									</div>
									<div class="mb-3">
										<h6 class="mb-1 text-sm font-bold">Just Eat</h6>
										<div class="relative h-2 w-full bg-neutral-200">
											<span class="absolute left-0 top-0 block h-full w-[53%] bg-secondary-900"></span>
										</div>
									</div>
									<div class="mb-3">
										<h6 class="mb-1 text-sm font-bold">Order Yoyo</h6>
										<div class="relative h-2 w-full bg-neutral-200">
											<span class="absolute left-0 top-0 block h-full w-[42%] bg-secondary-900"></span>
										</div>
									</div>
									<div class="mb-3">
										<h6 class="mb-1 text-sm font-bold">Flipdish</h6>
										<div class="relative h-2 w-full bg-neutral-200">
											<span class="absolute left-0 top-0 block h-full w-[41%] bg-secondary-900"></span>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endif %}

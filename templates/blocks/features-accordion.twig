<section class="py-32 px-14 lg:py-16 sm:px-8">
   <div class="mx-auto max-w-5xl">

      {% if fields.features_accordion_badge %}
         <div class="mb-4 flex justify-center">
            <h6 class="rounded bg-secondary-700 py-2 px-4 text-lg font-bold uppercase tracking-tighter text-primary-900">{{fields.features_accordion_badge}}</h6>
         </div>
      {% endif %}

      {% if fields.features_accordion_title %}
         <h2 class="mx-auto mb-16 max-w-xl text-center text-5xl font-bold tracking-tighter text-primary-900 sm:mb-10">{{fields.features_accordion_title}}</h2>
      {% endif %}

      <div class="grid grid-cols-2 items-center gap-32 lg:gap-20 md:grid-cols-1 md:gap-6">
         {% if fields.features_accordion_image %}
			<div class="relative w-full lg:h-full">
            <img src="{{Image(fields.features_accordion_image).src}}" alt="" class="h-full w-full rounded-md object-cover md:aspect-square"/>
            {% if fields.features_accordion_fact %}
               {% include 'widgets/widget-fact.twig' with {'fact': fields.features_accordion_fact} %}
            {% endif %}
			</div>
         {% endif %}

         {% if fields.features_accordion_items %}
            <div class="py-4">
               <div class="features-accordion flex flex-col items-stretch">
                  {% for feature in fields.features_accordion_items %}
                     <div class="accordion-item py-8{% if not loop.last %} border-b border-neutral-200{% endif %}">
                        <div class="accordion-item-header flex items-center justify-between cursor-pointer">
                           <h3 class="text-2xl font-bold">{{feature.title}}</h3>
                           <ion-icon name="chevron-down-outline" class="text-xl accordion-arrow"></ion-icon>
                        </div>
                        <div class="accordion-item-inner text-xl overflow-hidden will-change-max-height">
                           <p class="pt-4">{{feature.text}}</p>
                        </div>
                     </div>
                  {% endfor %}
               </div>
            </div>
         {% endif %}
      </div>

   </div>
</section>

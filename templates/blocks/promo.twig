<section id="promo" class="bg-primary-900 px-14 pt-32 lg:pt-16 sm:px-8">
   <div class="container mx-auto max-w-5xl">
      {% if fields.promo_title %}
      <h2 class="mx-auto mb-16 max-w-4xl text-center text-7xl font-bold text-white lg:text-5xl sm:mb-12">
         Integrate with your other ordering systems
      </h2>
      {% endif %}
      <div class="relative mx-auto {% if fields.promo_video %}aspect-video{% endif %} max-w-5xl">
         {% if fields.promo_video %}
            {% set promo_video = post.meta('group') %}
            <video autoplay muted poster="{{Image(fields.promo_video.poster).src}}" class="h-full w-full rounded-md object-cover">
               {% if fields.promo_video.mp4 %} <source src="{{ fields.promo_video.mp4 }}" type="video/mp4"></source> {% endif %}
               {% if fields.promo_video.webm %} <source src="{{ fields.promo_video.webm }}" type="video/webm"></source> {% endif %}
               {% if fields.promo_video.ogg %} <source src="{{ fields.promo_video.ogg }}" type="video/ogg"></source> {% endif %}
            </video>
            {% if fields.promo_video.link %}
            <a href="{{fields.promo_video.link.url}}" target="_blank" class="absolute top-2/4 left-2/4 flex h-40 w-40 -translate-x-2/4 -translate-y-2/4 scale-95 cursor-pointer items-center justify-center rounded-full bg-primary-900/75 backdrop-blur-md transition-all duration-300 ease-in-out hover:scale-100 hover:bg-primary-900 lg:h-32 lg:w-32 sm:h-24 sm:w-24">
               <img src="{{site_url}}/wp-content/uploads/2022/07/video-play.svg" alt=""/>
            </a>
            {% endif %}
         {% endif %}
         {% if fields.promo_image %}
            <img src="{{Image(fields.promo_image).src}}" alt="{{fields.promo_image.alt}}" class="w-full rounded-md"/>
         {% endif %}
      </div>
   </div>
</section>

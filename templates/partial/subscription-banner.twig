<section id="newsletter" class="bg-neutral-100 py-16 px-14 sm:px-8 sm:py-12">
   <div class="mx-auto grid max-w-3xl grid-cols-2 items-start gap-x-12 md:grid-cols-1 md:space-y-8">
      <div>
         <h3 class="mb-4 text-4xl font-bold tracking-tighter text-primary-900">
            Subscribe to marketing to receive regular news and updates.
         </h3>
         <p class="text-neutral-500 sm:hidden">
            Updates are relevant to your product and service.
         </p>
      </div>
      <form action="" class="flex flex-col items-start">
         <input type="text" name="subscribe_name" placeholder="Your Name" id="subscribe_name" class="mb-4 block w-full rounded bg-img-usericon bg-size-icon bg-pos-icon bg-no-repeat py-3 pl-14 pr-6 text-sm text-neutral-600 focus:outline-none"/>
         <input type="email" name="subscribe_email" placeholder="Your Email" id="subscribe_email" class="mb-7 block w-full rounded bg-img-emailicon bg-size-icon bg-pos-icon bg-no-repeat py-3 pl-14 pr-6 text-sm text-neutral-600 focus:outline-none"/>
         <button type="submit" class="min inline-block cursor-pointer rounded border border-primary-900 bg-primary-900 py-2 px-5 text-sm text-white">
            Submit
         </button>
      </form>
   </div>
</section>
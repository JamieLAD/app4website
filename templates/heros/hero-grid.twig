<section id="hero" class="bg-white px-14 pt-60 sm:px-8 sm:pt-36">
	<div class="mx-auto grid max-w-5xl place-items-center">

      {% if fields.hero_badge %}
		<h6 class="mb-6 rounded bg-secondary-700 py-2 px-4 text-lg font-bold uppercase tracking-tighter text-primary-900">
			{{ fields.hero_badge}}
		</h6>
      {% endif %}

      {% if fields.hero_title %}
		<h1 class="mb-16 max-w-3xl text-center text-7xl font-bold tracking-tighter text-primary-900 lg:text-6xl sm:mb-12 sm:text-5xl">
			{{ fields.hero_title }}
		</h1>
      {% endif %}

      {% if fields.hero_grid %}
		<div class="mb-16 grid w-full grid-cols-4 items-start gap-x-10 lg:grid-cols-3 sm:grid-cols-1">
         {% for image in fields.hero_grid %}
            <img src="{{Image(image.hero_grid_image).src}}" alt="" class="h-72 w-full rounded object-cover {% if loop.index in [2, 3] %}sm:hidden{% endif %}{% if loop.index == 4 %}lg:hidden{% endif %}"/>
         {% endfor %}
		</div>
      {% endif %}

		{% if fields.hero_stats %}
		<div class="grid h-44 w-full grid-cols-3 rounded-md border border-neutral-200 sm:h-auto sm:grid-cols-1">
			{% set hero_stats = post.meta('group') %}
			{% for stat in fields.hero_stats.stats_tile %}
			<div class="flex h-full flex-col justify-center space-y-1 p-8 text-center {% if loop.index == 2 %}border-x border-neutral-200 sm:border-x-0 sm:border-y{% endif %}">
				<h6 class="font-bold uppercase text-neutral-400">
					{{stat.stats_tile_heading}}
				</h6>
				<h3 class="text-5xl font-bold">
					{{stat.stats_tile_figure}}
				</h3>
			</div>
			{% endfor %}
		</div>
      {% endif %}

	</div>
</section>